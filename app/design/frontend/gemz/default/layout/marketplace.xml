<layout version="0.1.0">

    <!--

    Marketplace Product Grid layout

    -->

    <marketplace_product_index>

        <reference name="root">

            <action method="setTemplate">

                <template>page/2columns-left.phtml</template>

            </action>

        </reference>

        <reference name="head">

            <action method="addItem">

